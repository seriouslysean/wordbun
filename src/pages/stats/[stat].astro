---
export { generateStatsStaticPaths as getStaticPaths } from '#astro-utils/static-paths-utils';

import StatsMilestonePage from '#components/StatsMilestonePage.astro';
import StatsWordListPage from '#components/StatsWordListPage.astro';

import type { WordData, WordMilestoneItem } from '#types';

const { words, description, template } = Astro.props;

const milestoneWords = template === 'milestone' ? (words as WordMilestoneItem[]) : undefined;
const wordListWords = template === 'word-list' ? (words as WordData[]) : undefined;
---

{template === 'milestone' ? (
  <StatsMilestonePage words={[...milestoneWords!].reverse()} descriptionText={description} />
) : (
  <StatsWordListPage words={wordListWords!} descriptionText={description} />
)}
