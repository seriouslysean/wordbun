---
import BrowsePageTemplate from '#components/BrowsePageTemplate.astro';
import { getWordsFromCollection, groupWordsByLetter } from '#astro-utils/word-data-utils';

export async function getStaticPaths() {
  const allWords = await getWordsFromCollection();
  const letterGroups = groupWordsByLetter(allWords);

  return Object.entries(letterGroups).map(([letter, words]) => ({
    params: { letter },
    props: { words, letter },
  }));
}

const { words } = Astro.props;
---
<BrowsePageTemplate words={words} columns={2} />