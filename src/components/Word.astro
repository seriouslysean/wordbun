---
import Heading from '~components/Heading.astro';
import WordDescription from '~components/WordDescription.astro';
import type { WordData } from '~types';
import { formatDate, formatISODate } from '~utils/date-utils';
import { getWordDetails } from '~astro-utils/word-data-utils';

interface Props {
  word: WordData | null;
}

const { word } = Astro.props;

// Handle case when no word is available
if (!word) {
  throw new Error('Word not found');
}

const { partOfSpeech, definition, meta } = getWordDetails(word);
---

<article class="word">
  <time class="word__date" datetime={formatISODate(word.date)} title={formatDate(word.date)}>{formatDate(word.date) || '\u00A0'}</time>
  <Heading level={1} text={word.word} id="word-title" />
  <WordDescription
    partOfSpeech={partOfSpeech}
    definition={definition}
    meta={meta}
  />
</article>

<style>
    .word {
        text-align: center;
        width: 100%;
        max-width: var(--content-width-full);
        margin: 0 auto;
        padding: 0 var(--spacing-base);
    }

    .word__date {
        display: block;
        font-size: var(--font-size-xs, 0.75rem);
        color: var(--color-text-light);
        margin-bottom: var(--spacing-small);
    }

</style>
