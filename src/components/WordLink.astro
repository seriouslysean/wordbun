---
import SiteLink from '~components/SiteLink.astro';
import { formatDate, formatISODate } from '~utils/date-utils';
import { getWordUrl } from '~astro-utils/url-utils';

interface Props {
  word: {
    word: string;
    date: string;
  };
  href?: string;
  [key: string]: any;
}

const { word, href: overrideHref, class: className, ...attrs } = Astro.props;
const formattedDate = formatDate(word.date);

const href = overrideHref || getWordUrl(word.word);
---

<SiteLink
  href={href}
  class:list={['word-link', className]}
  {...attrs}
>
  <span class="word-link__word">{word.word}</span>
  {formattedDate && <time class="word-link__date" datetime={formatISODate(word.date)} title={formattedDate}>{formattedDate}</time>}
</SiteLink>

<style>
    .word-link {
        display: flex;
        flex-direction: column;
        text-decoration: none;
        padding: 0.25rem 0;
    }

    .word-link__word {
        font-size: 1.1rem;
        font-weight: 500;
        color: var(--color-text-primary);
    }

    .word-link__date {
        font-size: 0.8rem;
        color: var(--color-text-light);
        font-weight: normal;
    }

    /* Desktop styles for screens > 1025px */
    @media (min-width: 1025px) {
        .word-link {
            flex-direction: row;
            justify-content: space-between;
            align-items: baseline;
        }

        .word-link__date {
            margin-left: 1rem;
        }
    }
</style>
